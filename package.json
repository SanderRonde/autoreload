{
	"name": "@sanderronde/autoreload",
	"version": "1.0.3",
	"description": "A simple package for reloading your frontend when something changes",
	"main": "build/cjs/app.js",
	"module": "build/es/app.js",
	"repository": "https://github.com/SanderRonde/autoreload",
	"author": "Sander Ronde <awsdfgvhbjn@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^14.0.1",
		"@types/ws": "^7.2.4",
		"rimraf": "^3.0.2"
	},
	"files": [
		"build/**/*.ts",
		"build/**/*.js",
		"build/**/*.map"
	],
	"dependencies": {
		"chokidar": "^3.4.0",
		"kleur": "^3.0.3",
		"ws": "^7.3.0"
	},
	"scripts": {
		"copy-source": "node -e \"require('fs').copyFile('app/static/autoreload.ts', 'build/es/static/autoreload.ts', () => {}); require('fs').copyFile('app/static/autoreload.ts', 'build/cjs/static/autoreload.ts', () => {})\"",
		"prepack": "rimraf build/ && npm run build && npm run copy-source",
		"build": "tsc --build"
	}
}
